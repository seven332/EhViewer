<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/search_category_padding_h"
        android:paddingRight="@dimen/search_category_padding_h"
        android:paddingBottom="@dimen/search_category_padding_v">

        <TextView
            android:id="@+id/category_title"
            style="@style/CategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_category_title_height"
            android:saveEnabled="false" />

        <FrameLayout
            android:id="@+id/category_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>

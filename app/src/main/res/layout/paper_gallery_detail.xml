<com.hippo.ehviewer.widget.ehv.EhvDetailLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

      <include layout="@layout/gallery_detail_content"/>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/gallery_detail_header"/>

  </FrameLayout>

  <LinearLayout
    android:id="@+id/tip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
      android:id="@+id/tip_status_bar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="?attr/colorPrimaryDark"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <TextView
        android:id="@+id/tip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/key_margin"
        android:gravity="center_horizontal"
        android:drawablePadding="@dimen/key_margin"/>

    </FrameLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
      android:id="@+id/progress_status_bar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="?attr/colorPrimaryDark"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <com.hippo.ehviewer.widget.ProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/ProgressView"/>

    </FrameLayout>
  </LinearLayout>
</com.hippo.ehviewer.widget.ehv.EhvDetailLayout>

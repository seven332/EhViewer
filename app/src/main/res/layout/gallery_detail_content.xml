<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <include
        layout="@layout/gallery_detail_header"/>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/below_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/gallery_detail_info"/>

        <com.hippo.ehviewer.widget.DividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/keyline_margin"
            android:paddingRight="@dimen/keyline_margin"
            android:paddingBottom="@dimen/keyline_margin"
            app:dividerHeight="1dp"
            app:dividerColor="@color/divider"/>

        <include
            layout="@layout/gallery_detail_actions"/>

        <com.hippo.ehviewer.widget.DividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyline_margin"
            app:dividerHeight="1dp"
            app:dividerColor="@color/divider"/>

        <include
            layout="@layout/gallery_detail_tags"/>

        <com.hippo.ehviewer.widget.DividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/keyline_margin"
            android:paddingRight="@dimen/keyline_margin"
            android:paddingTop="@dimen/keyline_margin"
            app:dividerHeight="1dp"
            app:dividerColor="@color/divider"/>

        <include
            layout="@layout/gallery_detail_comments"/>

        <com.hippo.ehviewer.widget.DividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/keyline_margin"
            android:paddingRight="@dimen/keyline_margin"
            app:dividerHeight="1dp"
            app:dividerColor="@color/divider"/>

        <include
            layout="@layout/gallery_detail_previews"/>

    </LinearLayout>

    <include
        layout="@layout/gallery_detail_progress"/>

</LinearLayout>

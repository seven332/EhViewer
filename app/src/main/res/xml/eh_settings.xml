<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hippo.ehviewer.preference.SignOutPreference
        android:key="sign_out"
        android:title="@string/settings_eh_sign_out"
        android:summary="@string/settings_eh_sign_out_summary"/>

    <com.hippo.preference.ListPreference
        android:key="list_mode"
        android:title="@string/settings_eh_list_mode"
        android:summary="%s"
        app:entries="@array/list_mode_entries"
        app:entryValues="@array/list_mode_entry_values"
        android:defaultValue="0"/>

    <com.hippo.ehviewer.preference.DefaultCategoryPreference
        android:key="default_categories"
        android:title="@string/settings_eh_default_categories"
        android:summary="@string/settings_eh_default_categories_summary"/>

    <com.hippo.ehviewer.preference.ExcludedTagNamespacesPreference
        android:key="excluded_tag_namespaces"
        android:title="@string/settings_eh_excluded_tag_namespaces"
        android:summary="@string/settings_eh_excluded_tag_namespaces_summary"/>

    <com.hippo.preference.ActivityPreference
        android:key="excluded_languages"
        android:title="@string/settings_eh_excluded_languages"
        android:summary="@string/settings_eh_excluded_languages_summary"
        app:activity="com.hippo.ehviewer.ui.ExcludedLanguagesActivity"/>

    <com.hippo.preference.SwitchPreference
        android:key="show_jpn_title"
        android:title="@string/settings_eh_show_jpn_title"
        app:summaryOn="@string/settings_eh_show_jpn_title_summary_on"
        app:summaryOff="@string/settings_eh_show_jpn_title_summary_off"
        android:defaultValue="false"/>

</PreferenceScreen>
